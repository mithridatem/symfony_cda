{% extends 'base.html.twig' %}

{% block title %}liste Categorie{% endblock %}

{% block body %}
    <h3>Liste des catégories :</h3>
    {% for categorie in categories %}
        <li><a href="{{ path('app_categorie_update', {'id': categorie.id})}}">{{ categorie.nom }}</a>
            <a href="{{ path('app_categorie_delete', {'id': categorie.id})}}"><i class="fa-solid fa-trash-can"></i></a></li>
    {% endfor %}
    {% if msg is defined %}
        <p>{{ msg }}</p>
    {% endif %}
    <a href="{{ path('app_categorie_add')}}">Ajouter une catégorie</a>
{% endblock %}